<% if (success && success.length) { %>
  <div class="alert alert-info alert-dismissible fade show mt-3 col-12 col-md-6 offset-md-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3 col-12 col-md-6 offset-md-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>