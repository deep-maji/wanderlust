<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #filter-options {
    display: flex;
    overflow-x: auto;
  }

  #filter-options::-webkit-scrollbar {
    display: none;
  }

  .filter {
    margin-top: 2rem;
    margin-bottom: 1rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
    transition: all ease 0.3ms;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  #tax-toggel {
    border: 1px solid black;
    padding: 0.7rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    text-wrap: nowrap;
    margin-left: 1rem;
  }
</style>


<div id="filters">
  <div id="filter-options">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
  </div>

  <div id="tax-toggel">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
      <label class="form-check-label" for="switchCheckChecked">Display total after taxs</label>
    </div>
  </div>
</div>
  <body>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
      <% for (let listing of listings) { %>
        <a href="/listings/<%= listing._id  %>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-img-overlay"><%= listing.description %></div>
            <div class="card-body">
              <p class="card-text"><b><%= listing.title %></b> <br> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <i class="tax-info"> &nbsp; &nbsp;+18% taxs</i></p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
  </body>

<script>
  let taxSwitch = document.querySelector("#switchCheckChecked");
  taxSwitch.addEventListener("click", (e) => {
    let tax_info = document.getElementsByClassName("tax-info");
    for (const element of tax_info) {
      if (element.style.display != "inline") {
        element.style.display = "inline";
      }
      else {
        element.style.display = "none";
      }
    }
  })
</script>