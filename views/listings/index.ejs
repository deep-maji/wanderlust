<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #filter-options {
    width: 100%;
    display: flex;
    overflow-x: scroll;
  }

  #filter-options::-webkit-scrollbar {
    display: none;
  }

  .filter {
    margin-top: 2rem;
    margin-bottom: 1rem;
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
    transition: all ease 0.3ms;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  #tax-toggel {
    border: 1px solid black;
    padding: 0.7rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    text-wrap: nowrap;
    margin-left: 1rem;
  }

  a {
    text-decoration: none;
    color: #000;
  }

  @media (max-width:764px) {
    #filters { 
      flex-direction: column;
      width: 100%;
    }

    #tax-toggel {
      margin-bottom: 1rem;
    }

  }
</style>


<div id="filters">
  <div id="filter-options">
    <!-- <div class="filter">
      <a href="/listings?filter=trending">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>
    </div> -->
    <div class="filter">
      <a href="/listings?filter=iconicCities">
        <div><i class="fa-solid fa-mountain-city"></i></i></div>
        <p>Iconic Cities</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?filter=mountains">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?filter=castles">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?filter=amazingPools">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?filter=camping">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Camping</p>
      </a>
    </div>
    <div class="filter">
      <a href="/listings?filter=farms">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </a>
    </div>
    <div class="filter">
      <div>
        <a href="/listings?filter=arctic">
          <i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p>
        </a>
      </div>
    </div>
  </div>

  <div id="tax-toggel">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked">
      <label class="form-check-label" for="switchCheckChecked">Display total after taxes</label>
    </div>
  </div>
</div>
  <body>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
      <% if (listings.length !== 0) { %>
        <% for (let listing of listings) { %>
          <a href="/listings/<%= listing._id  %>" class="listing-link">
            <div class="card col listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
              <div class="card-img-overlay"><%= listing.description %></div>
              <div class="card-body">
                <p class="card-text"><b><%= listing.title %></b> <br> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <i class="tax-info"> &nbsp; &nbsp;+18% taxes</i></p>
              </div>
            </div>
          </a>
        <% } %>
      <% } else { %>
          <p>No result found!</p>
      <% } %>

    </div>
  </body>

<script>
  let taxSwitch = document.querySelector("#switchCheckChecked");
  taxSwitch.addEventListener("click", (e) => {
    let tax_info = document.getElementsByClassName("tax-info");
    for (const element of tax_info) {
      if (element.style.display != "inline") {
        element.style.display = "inline";
      }
      else {
        element.style.display = "none";
      }
    }
  })
</script>