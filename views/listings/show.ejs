<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-3">
      <h3 class="mt-3 mb-3"><%= listing.title %></h3>
    </div>
    <div class="card col-12 col-md-6 offset-md-3 listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_imgage" >
      <div class="card-body">
        <br>
        <p class="card-text">
          <i>Owned by : <%= listing.owner.username %></i> <br>
          <%= listing.description %> <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
          <%= listing.location %> <br>
          <%= listing.country %> <br>
        </p>
        <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="col-12">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn mb-3 w-100">Edit</a>
        </div>
        <form class="col-12" action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <button class="btn btn-dark mb-3 w-100">Delete</button>
        </form>
        <% } %>
      </div>

      <div class="col-12 col-md-8 listing-card">
        <br>
        <h4>Where you'll be</h4>
        <div id="map"></div>
      </div>

      <% if (currUser) { %>
      <div class="card col-12 mt-4 listing-card">
        <hr>
        <h4>Leave a review:</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
          <label for="rating" class="form-lable">Rating: </label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <div>
            <label for="comment" class="form-lable">Comment: </label>
            <textarea name="review[comment]" class="form-control" id="comment" cols="20" rows="6" required></textarea>
            <div class="invalid-feedback">Add some comments!</div>
          </div>
          
          <button class="btn btn-outline-dark mt-3">Comment</button>
        </form>
      </div>
      <% } %>

      <div class="card col-12 mt-4 listing-card">
        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">
          <% for (const review of listing.reviews) { %>
            <div class="card col-md-5 ms-md-3 mb-3 p-3">
              <div class="card-body mb-3">
                <h5 class="card-body">@<%= review.author.username %></h5>
                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                <p class="card-text"> <%= review.comment %> </p>
              </div>
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>  
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
<script>
  const MAPTILER_API_KEY = '<%- process.env.MAPTILER_API_KEY %>'
  const listing = <%- JSON.stringify(listing) %>;
</script>
<script src="/js/map.js"></script>
